# Environment Variables
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/prahestate_db"
# Alternative for SQLite during development:
# DATABASE_URL="file:./dev.db"

# Sreality API Configuration
SREALITY_BASE_URL=https://www.sreality.cz
API_REQUEST_DELAY=2000
MAX_CONCURRENT_REQUESTS=3

# Synchronization Settings
SYNC_INTERVAL_MINUTES=30
INITIAL_SYNC_ENABLED=true
FULL_SYNC_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
